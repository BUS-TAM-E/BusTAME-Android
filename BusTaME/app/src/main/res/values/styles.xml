<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bustame." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet</item>
    </style>

    <!-- Main Green Button Style -->
    <style name="NormalGreenButtonTheme" parent="Widget.AppCompat.TextView">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_round_10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/green_58D78F</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <!-- Main Grey Button Style -->
    <style name="NormalGreyButtonTheme" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">#C2C2C2</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_round_10</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>
</resources>