<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUserCategory">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/setRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/category_rate" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/setRate"
        app:layout_constraintTop_toBottomOf="@id/setRate"
        app:srcCompat="@drawable/category_name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/categoryIntro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/categoryName"
        app:layout_constraintTop_toBottomOf="@+id/categoryName"
        app:srcCompat="@drawable/category_intro" />

    <Button
        android:id="@+id/btnDisabled"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/radius"
        android:elevation="80dp"
        android:text="@string/category_btn_disabled"
        android:textColor="@color/bustame_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryIntro" />

    <Button
        android:id="@+id/btnOld"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/radius"
        android:elevation="80dp"
        android:text="@string/category_btn_old"
        android:textColor="@color/bustame_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDisabled" />

    <Button
        android:id="@+id/btnPregnant"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/radius"
        android:elevation="80dp"
        android:text="@string/category_btn_pregnant"
        android:textColor="@color/bustame_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOld" />

    <Button
        android:id="@+id/btnWithBaby"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/radius"
        android:elevation="80dp"
        android:text="@string/category_btn_with_baby"
        android:textColor="@color/bustame_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPregnant" />

    <Button
        android:id="@+id/btnElse"
        android:layout_width="316dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/radius"
        android:elevation="80dp"
        android:text="@string/category_btn_else"
        android:textColor="@color/bustame_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWithBaby" />

    <Button
        android:id="@+id/btnPrev"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/radius"
        android:backgroundTint="@color/btnGreen"
        android:elevation="100dp"
        android:text="@string/btn_previous"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnElse"
        app:layout_constraintStart_toStartOf="@+id/btnElse" />


</androidx.constraintlayout.widget.ConstraintLayout>